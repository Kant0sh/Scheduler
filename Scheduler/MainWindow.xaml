<Window x:Class="Scheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scheduler"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1000">
    <Grid Margin="0">
        <ScrollViewer HorizontalScrollBarVisibility="Visible" Margin="0,0,0,50">
            <Grid Width="Auto" Name="grid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="100"/>
                    <ColumnDefinition Width="*" MinWidth="100"/>
                    <ColumnDefinition Width="*" MinWidth="100"/>
                </Grid.ColumnDefinitions>

                <Label Content="Left" Background="Azure" Grid.Column="0"/>
                <Label Content="Middle" Background="Lavender" Grid.Column="1"/>
                <Label Content="Right" Background="Beige" Grid.Column="2"/>
                <Label x:Name="label" Content="Label" Grid.Column="1" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center"/>

            </Grid>
        </ScrollViewer>
        <Slider x:Name="slider" Margin="30,0,30,15" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
